<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="kr.edcan.cumchuck.activity.RankingDetailPopupViewActivity">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/spaceBackground"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="4" />

    <LinearLayout
        android:id="@+id/ranking_detail_view_focusview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/ranking_detail_cardview_header"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <kr.edcan.cumchuck.utils.RoundImageView
                    android:id="@+id/ranking_detail_cardview_image"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:src="@drawable/ayano3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ranking_detail_cardview_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오준석"
                        android:textColor="#FFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ranking_detail_cardview_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016년 06월 03일 작성"
                        android:textColor="#FFF"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/round_square_30dp"
                android:drawableLeft="@drawable/ic_review_star"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingBottom="7dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:text="5.0"
                android:textColor="#FFF" />
        </RelativeLayout>

        <RelativeLayout
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="히어로즈 오브 더 스톰"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="ㅁㄴ아ㅣ러ㅏㅁㄴ어ㅣㅏ러ㅏㅁㄴ어ㅏ러ㅏㅁㄴ아ㅣ러ㅏㅁㄴ어ㅣㅏ러ㅏㅁㄴ어ㅏ러ㅏㅁㄴ아ㅣ러ㅏㅁㄴ어ㅣㅏ러ㅏㅁㄴ어ㅏ러ㅏㅁㄴ아ㅣ러ㅏㅁㄴ어ㅣㅏ러ㅏㅁㄴ어ㅏ러ㅏ"
                    android:textColor="@color/textColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_square_30dp"
                    android:gravity="center"
                    android:text="추천하기"
                    android:textColor="#FFF"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_square_30dp"
                    android:gravity="center"
                    android:text="공유하기"
                    android:textColor="#FFF"
                    android:textSize="17sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
