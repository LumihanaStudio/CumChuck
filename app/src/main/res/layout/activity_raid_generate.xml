<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RaidGenerateActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@color/colorPrimary" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/raid_generate_firstpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/round_edittext_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/raid_generate_searchQuery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="45dp"
                        android:layout_marginTop="1dp"
                        android:background="@null"
                        android:hint="음식점 찾아보기"
                        android:inputType="textNoSuggestions"
                        android:maxLines="1"
                        android:textColorHint="@color/textColor"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/raid_generate_searchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="6dp"
                    android:background="?attr/selectableItemBackground"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:src="@drawable/btn_search" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/raid_generate_defaultView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <kr.edcan.cumchuck.utils.RoundImageView
                        android:id="@+id/raid_generate_defaultViewImage"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:src="@drawable/ayano1" />

                    <TextView
                        android:id="@+id/raid_generate_defaultViewTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="먼저 가고싶은 음식점을 찾아주세요!"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                    <kr.edcan.cumchuck.utils.RoundImageView
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_marginTop="8dp"
                        android:src="#BCBCBC" />

                    <TextView
                        android:id="@+id/raid_generate_defaultViewContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="내가 있는 위치를 기준으로\n키워드 종류 또는 음식점 이름으로 검색할 수 있습니다"
                        android:textSize="10sp" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/raid_generate_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/raid_generate_secondpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/common_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#AA000000" />

                <TextView
                    android:id="@+id/raid_generate_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="16dp"
                    android:background="@drawable/round_white_text_selector"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="5dp"
                    android:text="변경하기"
                    android:textColor="#FFF"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="16dp"
                    android:layout_marginBottom="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/common_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="청담 시공폭풍 레스토랑"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/common_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="서울특별시 강남구 청담동 41-2"
                        android:textColor="#FFF"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.rey.material.widget.EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.rey.material.widget.EditText>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
