<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/fav_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ayano"
            android:tint="#AA000000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fav_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="청담 시공폭풍 레스토랑"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/fav_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="서울특별시 강남구 청담동 41-2"
                android:textColor="#FFF"
                android:textSize="10sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="#FFF" />

            <TextView
                android:id="@+id/fav_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="분식집 맛에 질려 조금 더 고오급스러운 음식은 \n먹어보고자 한다면? 고오급 레스토랑이죠!"
                android:textColor="#FFF"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/fav_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/fav_rating_bg"
            android:drawableLeft="@drawable/ic_fav_status_star"
            android:drawablePadding="5dp"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:text="1.5"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/fav_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:src="@drawable/btn_fav_favstar_off" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="#FFF" />
    </RelativeLayout>
</RelativeLayout>