<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.edcan.cumchuck">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".activity.ApplicationLauncher"
        android:theme="@style/AppTheme.NoActionBar">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MyPageActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.FavoriteViewActivity" />
        <activity
            android:name=".activity.RankingShowActivity"
            android:label="@string/title_activity_ranking_show"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.RankingDetailViewActivity" />
        <activity
            android:name=".activity.RankingDetailPopupViewActivity"
            android:theme="@style/Theme.AppCompat.Translucent" />
        <activity
            android:name=".activity.RaidGenerateActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.RaidGenerateInputActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.RecommendActivity" />
        <activity android:name=".activity.RaidFromFriendActivity" />
        <activity android:name=".activity.MyReviewActivity" />
        <activity android:name=".activity.MyReviewDetailViewActivity" />
        <activity android:name=".activity.PostReviewActivity" />
        <activity android:name=".activity.RunningRaidActivity" />
        <activity android:name=".activity.AuthActivity"></activity>
    </application>

</manifest>